{
  "name": "blindpad",
  "version": "1.0.0",
  "description": "Blindpad is an open source collaborative text editor (like Google Docs or CoderPad) with integrated semi-anonymizing voice chat intended to help reduce bias in technical communication.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/blindpad/blindpad.git"
  },
  "homepage": "https://github.com/blindpad/blindpad",
  "scripts": {
    "build": "webpack --progress --colors",
    "clean": "rm -rf dist",
    "dev-app": "webpack-dev-server --progress --colors",
    "dev-signaler": "webpack --progress --colors && node dist/server.js",
    "prod": "PROD_ENV=1 npm run build",
    "prod-app": "PROD_ENV=1 npm run dev-app",
    "deploy-signaler": "npm run clean && npm run prod && rm -f ../bpsignaler/server.js && cp ./dist/server.js ../bpsignaler/server.js && cd ../bpsignaler && git commit --allow-empty -am deployed && git push origin master",
    "deploy-public": "npm run clean && npm run prod && rm -rf ../blindpad.github.io/* && cp -r ./dist/* ../blindpad.github.io/ && cd ../blindpad.github.io && git add --all && git commit --allow-empty -am deployed && git push origin master",
    "test": "karma start"
  },
  "dependencies": {
    "@angular/common": "2.0.0",
    "@angular/compiler": "2.0.0",
    "@angular/core": "2.0.0",
    "@angular/forms": "2.0.0",
    "@angular/http": "2.0.0",
    "@angular/platform-browser": "2.0.0",
    "@angular/platform-browser-dynamic": "2.0.0",
    "@angular/router": "3.0.0",
    "basic-auth": "^1.0.4",
    "bowser": "^1.4.4",
    "codemirror": "^5.16.0",
    "codemirror-mode-elixir": "^1.1.1",
    "core-js": "^2.4.0",
    "detect-pitch": "^1.1.0",
    "express": "^4.14.0",
    "lz-string": "^1.4.4",
    "node-uuid": "^1.4.7",
    "pitch-shift": "0.0.0",
    "reflect-metadata": "0.1.8",
    "rxjs": "5.0.0-beta.12",
    "socket.io": "^1.4.8",
    "socket.io-client": "^1.4.8",
    "typedarray-pool": "^1.1.0",
    "web-animations-js": "^2.2.2",
    "webrtc-adapter": "^2.0.2",
    "zone.js": "0.6.25"
  },
  "devDependencies": {
    "angular2-template-loader": "^0.5.0",
    "css-loader": "^0.24.0",
    "file-loader": "^0.9.0",
    "imports-loader": "^0.6.5",
    "jasmine-core": "^2.4.1",
    "karma": "^1.0.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.6",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "1.8.0",
    "node-sass": "^3.8.0",
    "raw-loader": "0.5.1",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.2",
    "tslint": "^3.14.0",
    "tslint-loader": "^2.1.5",
    "typescript": "^1.8.10",
    "webpack": "^1.12.8",
    "webpack-dev-server": "^1.12.1"
  }
}
